#!/usr/bin/env bash
function load_address() {
  echo $(cat $MCD_ADDRESS_FILE | jq ".[\"$1\"]" |  tr -d '"')
}

test -z "$MCD_ADDRESS_FILE" && echo "MCD_ADDRESS_FILE needs to be set" && exit 1;
export MCD_DEPLOY=$(load_address "MCD_DEPLOY")
export MCD_PROXY=$(load_address "PROXY_ACTIONS")
export CDP_MANAGER=$(load_address "CDP_MANAGER")
export MCD_VAT=$(load_address "MCD_VAT")
export MCD_DAI=$(load_address "MCD_DAI")
export MCD_JOIN_DAI=$(load_address "MCD_JOIN_DAI")
export MCD_JUG=$(load_address "MCD_JUG")
export MCD_SPOT=$(load_address "MCD_SPOT")
export MCD_PAUSE=$(load_address "MCD_PAUSE")
export MCD_PAUSE_PROXY=$(load_address "MCD_PAUSE_PROXY")
export MCD_ADM=$(load_address "MCD_ADM")
export MCD_END=$(load_address "MCD_END")
export MCD_CAT=$(load_address "MCD_CAT")
export MCD_GOV=$(load_address "MCD_GOV")
export FAUCET=$(load_address "FAUCET")
